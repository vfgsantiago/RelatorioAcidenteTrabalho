<script>
    $(function () {

        $('a:not([target="_blank"]):not([href^="#"]):not([data-bs-toggle="modal"]):not(.js-no-loader)').on('click', function (e) {
            $('.loader').show();
        });

        // Loader ao enviar formulários
        $('form').on('submit', function () {
            if ($(this).valid()) {
                $('.loader').show();
            }
        });

        // Loader para chamadas AJAX
        $(document).ajaxStart(function () {
            $('.loader').show();
        });

        $(document).ajaxStop(function () {
            $('.loader').hide();
        });

        // Garante que o loader desapareça ao fechar qualquer modal
        $(document).on('hidden.bs.modal', function () {
            $('.loader').hide();
        });

        $('input').attr('autocomplete', 'off');
        $('.select2').select2();

        //mascaras
        $('.telefone-celular').inputmask('(99) 9999-99999')
        $('.cpf').inputmask('999.999.999-99')

        $(window).scroll(function () {
            //ícone do canto direito
            if ($(this).scrollTop() != 0) {
                $('.top-page').fadeIn();
            } else {
                $('.top-page').fadeOut();
            }
            //cor de fundo do topo
            var topo = $('#topNav');
            var submenu = $('.navbar-submenu');
            if ($(window).scrollTop() > 100) {
                topo.addClass('navbar-opacity');
            } else {
                if ($(window).scrollTop() <= 100) {
                    topo.removeClass('navbar-opacity');
                }
            }
        });

        $('.calendario').val("");

        $('.numero').keydown(function (e) {
            var key = e.charCode || e.keyCode || 0;
            return (
                key == 8 ||
                key == 9 ||
                key == 13 ||
                key == 46 ||
                key == 110 ||
                key == 190 ||
                (key >= 35 && key <= 40) ||
                (key >= 48 && key <= 57) ||
                (key >= 96 && key <= 105));
        });

        $('.top-page').click(function () {
            $('body,html').animate({ scrollTop: 0 }, 800);
        });

        $('.page-item,.nav-treeview .nav-item').click(function () {
            $('.loader').show();
        });

        $(function () {
            $('.popover').popover({
                container: 'body'
            })
        });
    });
</script>
