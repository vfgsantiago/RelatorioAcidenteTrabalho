@{
    var nomeCompleto = User.FindFirst("NmUsuario")?.Value ?? "";
    var nomes = nomeCompleto.Split(' ', StringSplitOptions.RemoveEmptyEntries);

    string primeiroNome = nomes.Length > 0 ? nomes[0] : "";
    string ultimoNome = nomes.Length > 1 ? nomes[nomes.Length - 1] : "";

    string formatarNome(string nome) =>
        char.ToUpper(nome[0]) + nome.Substring(1).ToLower();

    var nomeFormatado = $"{formatarNome(primeiroNome)} {formatarNome(ultimoNome)}";
}

<nav class="app-header navbar navbar-expand bg-primary shadow-sm py-2 header">
    <div class="container-fluid align-items-center justify-content-between px-4">
        <div class="d-flex align-items-center">
            <a asp-action="Index" asp-controller="Home" class="brand-link d-flex align-items-center text-decoration-none">
                <img src="logo.png" class="header-logo" alt="Logo">
                <span class="h4 ms-3 pt-2 text-white fw-semibold">RAT Administrador</span>
            </a>
        </div>
        <div class="header-links d-none d-lg-flex align-items-center gap-3">
            <a asp-action="Index" asp-controller="Relatorio" asp-area="Admin" class="header-pill">
                <i class="fas fa-chart-line"></i>
                <span>Relatórios</span>
            </a>
            <a asp-action="Index" asp-controller="Formulario" asp-area="Admin" class="header-pill">
                <i class="fas fa-cogs"></i>
                <span>Formulários</span>
            </a>
            <a asp-action="Index" asp-controller="TipoAcidente" asp-area="Admin" class="header-pill">
                <i class="fas fa-exclamation-triangle"></i>
                <span>Categorias</span>
            </a>
            <a asp-action="Index" asp-controller="Pergunta" asp-area="Admin" class="header-pill">
                <i class="fas fa-question-circle"></i>
                <span>Perguntas</span>
            </a>
        </div>
        <div class="d-flex align-items-center">
            <img src="@Configuration.GetSection("UrlRepositorio").Value/@User.FindFirst("Avatar").Value"
                 class="user-image rounded-circle shadow bg-white me-2"
                 style="width:42px; height:42px; object-fit:cover;"
                 alt="User Image">
            <span class="text-white me-3 d-none d-md-inline header-user">@nomeFormatado</span>
            <a asp-controller="Login" asp-action="Sair"
               class="btn btn-red btn-sm fs-6 shadow px-3 py-1">
                Logout <i class="ms-1 fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</nav>
